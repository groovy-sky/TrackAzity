{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string"
          },
          "peeringName":{
              "type": "string"
          },
        "remoteVnetId":{
            "type": "string"
        },
        "allowVnetAccess":{
            "type": "bool",
            "defaultValue": "[bool('true')]"
        },
        "useRemoteGW":{
            "type": "bool",
            "defaultValue": "[bool('false')]"
        },
        "allowGWtransit":{
            "type": "bool",
            "defaultValue": "[bool('false')]"
        },
        "allowForwardTraffic":{
            "type": "bool",
            "defaultValue": "[bool('false')]"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "allowedValues": ["WestEurope","NorthEurope","SwedenCentral","northeurope","westeurope","swedencentral"]
          }
    },
    "variables": {
        "peeringConnectionName":"[concat(parameters('vnetName'), '/', parameters('peeringName'))]"
    },
"resources": [
        {
        "apiVersion": "2021-01-01",
        "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
        "name": "[variables('peeringConnectionName')]",
        "location": "[parameters('location')]",
        "properties": {
        "allowVirtualNetworkAccess": "[parameters('allowVnetAccess')]",
        "allowForwardedTraffic": "[parameters('allowForwardTraffic')]",
        "allowGatewayTransit": "[parameters('allowGWtransit')]",
        "useRemoteGateways": "[parameters('useRemoteGW')]",
            "remoteVirtualNetwork": {
            "id": "[parameters('remoteVnetId')]"
            }
        }
        }
    ]
}